{
    "name": "spatie/pest-expectations",
    "description": "A collection of handy custom Pest customisations",
    "keywords": [
        "spatie",
        "pest-expectations"
    ],
    "homepage": "https://github.com/spatie/pest-expectations",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "illuminate/contracts": "^9.47",
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\PestExpectations\\": "src"
        },
        "files": [
            "src/PestExpectations.php",
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\PestExpectations\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "RUN_HELPERS_TEST='true' ./vendor/bin/pest tests/HelpersTest.php",
            "./vendor/bin/pest"
        ],
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
